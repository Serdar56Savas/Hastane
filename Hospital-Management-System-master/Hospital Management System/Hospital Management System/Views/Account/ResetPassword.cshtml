@model Hospital_Management_System.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
}
<body background="https://media.istockphoto.com/vectors/abstract-geometric-medical-cross-shape-medicine-and-science-concept-vector-id940993008?k=20&m=940993008&s=612x612&w=0&h=rCRrrtzkm7aUqbzFf_ov3KF5UWgc_yDu_GAibzmVbWE=">

</body>
<section class="section-form" id="contact">
    <div class="row">
        <h2>@ViewBag.Title.</h2>
    </div>
    @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()


        <div class="row">
            <div class="col span-1-of-4">

            </div>
            <div class="col span-2-of-4">
                <div class="plan-box">
                    <div>
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Code)
                        <div>
                            <label for="name">Şifre<span style="color: red; font-weight: bold">*</span></label>
                            @Html.PasswordFor(m => m.Password, new { @placeholder = "Şifre", id = "name" })
                            @*@Html.ValidationMessageFor(m => m.UserName, "", new {@class = "text-danger"})*@
                        </div>
                        <div>
                            <label for="name">Şifreyi Onayla<span style="color: red; font-weight: bold">*</span></label>
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @placeholder = "Şifreyi Onayla", id = "name" })
                            @*@Html.ValidationMessageFor(m => m.UserName, "", new {@class = "text-danger"})*@
                        </div>
                        <br />
                        <p style="color:orangered">
                            @Html.ActionLink("Geri Dön", "Login")
                        </p>
                    </div>
                    <div style="text-align: center !important">
                        <input type="submit" value="Şifreyi Değiştir" class="btn btn-ghost">
                    </div>
                </div>
            </div>
            <div class="col span-1-of-4">

            </div>
        </div>
    }
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
